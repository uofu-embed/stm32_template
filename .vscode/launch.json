{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "stlinkgdbtarget",
            "request": "launch",
            "name": "STM32Cube: STM32 Launch ST-Link GDB Server",
            "origin": "snippet",
            "cwd": "${workspaceFolder}",
            "preBuild": "${command:st-stm32-ide-debug-launch.build}",
            "runEntry": "main",
            "imagesAndSymbols": [
                {
                    "imageFileName": "${command:cmake.launchTargetPath}"
                }
            ]
        },
        {
            "cwd": "${workspaceRoot}",
            "executable": "${command:cmake.launchTargetPath}",
            "name": "RTT graphing",
            "request": "launch",
            "type": "cortex-debug",
            "servertype": "openocd",
            "configFiles": [
                "board/stm32f0discovery.cfg"
            ],
            "runToEntryPoint": "main",
            "showDevDebugOutput": "none",
            "svdPath": "STM32F072x.svd",
            "rttConfig": {
                "enabled": true,
                "address": "auto",
                "decoders": [
                    {
                        "label": "duty_cycle",
                        "port": 0,
                        "type": "graph",
                        "encoding":"unsigned",
                        "graphId": "1",
                        "scale": 1
                    },
                    {
                        "label": "target_rpm",
                        "port": 1,
                        "type": "graph",
                        "encoding":"signed",
                        "graphId": "2",
                        "scale": 1
                    },
                    {
                        "label": "motor_speed",
                        "port": 2,
                        "type": "graph",
                        "encoding":"signed",
                        "graphId": "3",
                        "scale": 1
                    }
                ]
            },
            "preLaunchTask": {
                "type": "PlatformIO",
                "task": "Pre-Debug (lab1)"
            },
            "graphConfig": [
                {
                    "label": "Graph 1",
                    "timespan": 5,
                    "type": "realtime",
                    "annotate": false,
                    "maximum": 256,
                    "minimum": 0,
                    "plots": [
                        {
                            "graphId": "1", 
                            "label": "duty_cycle",
                            "color": "#53753c"
                        },
                        {
                            "graphId": "2", 
                            "label": "target_rpm",
                            "color": "#955f20"
                        },
                        {
                            "graphId": "3", 
                            "label": "motor_speed",
                            "color": "#B57EDC"
                        }
                    ]
                },
            ]
        }
    ]
}
